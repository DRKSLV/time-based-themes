{
  "manifest_version": 2,
  "name": "Time-Based Themes",
  "version": "1.0",

  "description": "Changes the theme based on the time of day.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "alarms",
    "tabs",
    "theme"
  ],

  "background": {
    "scripts": ["common.js", "background.js"]
  },
  "options_ui": {
      "page": "html/options.html",
      "open_in_tab": true
  }
}