{
  "manifest_version": 2,
  "name": "Time-Based Theme Changer",
  "version": "1.0",

  "description": "Automatically change Firefox's the theme based on the time.",

  "icons": {
  },

  "permissions": [
    "alarms",
    "management",
    "tabs",
    "theme"
  ],

  "background": {
    "scripts": ["common.js", "background.js"]
  },

  "options_ui": {
      "page": "html/options.html",
      "open_in_tab": true
  }
}